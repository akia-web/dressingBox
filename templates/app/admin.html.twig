{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<div class="row">
<div style="background-color:#C2ABAE;height: 100px" class="col-md-6" >
  <h1 style="line-height: 80px"> Bienvenue sur mon compte</h1> 
</div>
<div class="col-md-6 " style="background-color:#C2ABAE;">
  <h2 style="line-height: 50px"> Trouve ta tenue!</h2> 
  <button style="border-radius: 7px"><a href="{{path('defilement')}}">Défilement</a> </button>
  <button style="border-radius: 7px "><a href="{{path('aleatoire')}}">Aléatoire</a> </button>
  <button style="border-radius: 7px "><a href="{{path('style')}}">Exceptionnel</a> </button>
</div>
  </div>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#tenue">Mon Dressing</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Favoris</a>
  </li>
  </ul>



<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade show active" id="home">







    <div class="row">
      <div class="col-md-6" style="">

    
        <h2>Haut</h2>
        {% for haut in hauts %}
       <img src="uploads/{{ haut.photo }}" style="height:100px">
        {% endfor %}


       <h2>Bas</h2>
        {% for ba in bas %}
      <img src="uploads/{{ ba.photo }}" style="height:100px">
        {% endfor %}


        <h2>Chaussures</h2>
        {% for chaussure in chaussures %}
        <img src="uploads/{{ chaussure.photo }}" style="height:100px">
        {% endfor %}
      </div> <!-- fin 6 cases-->

     <div class="col-md-6">
       <h2 style="text-align: center">Ajouter</h2>
        <form action="" method="POST" enctype="multipart/form-data" >
          <label for="categorie">Catégorie :</label>
          <select name="categorie" id="categorie" required>
            <option value="haut">Haut</option>
            <option value="bas">Bas</option>
            <option value="chaussures">Chaussures</option>
          </select><br><br>

          <label for="style">Balance ta photo :</label>
          <input type="file" name="image" id="image" required><br><br>

          <label for="taille"> Taille (facultatif) :</label>
          <select name="taille" id="taille">
              <option value="">--</option>
              <option value="xs">XS</option>
              <option value="s">S</option>
              <option value="m">M</option>
              <option value="l">L</option>
              <option value="xl">XL</option>
              <option value="xxl">XXL</option>
          </select><br><br>

          <label for="marque">Marque (facultatif)</label>
          <input type="text" name="marque" id="marque"><br><br>

          <label for="couleur">Couleur :</label>
            <select name="couleur" id="couleur" required>
              <option value="noir">Noir</option>
              <option value="rouge">Rouge</option>
              <option value="blanc">Blanc</option>
              <option value="bleu">Bleu</option>
              <option value="gris">Gris</option>
              <option value="rose">Rose</option>
              <option value="violet">Violet</option>
              <option value="vert">Vert</option>
              <option value="jaune">Jaune</option>
              <option value="marron">Marron</option>
              <option value="beige">Beige</option>
            </select><br><br>

          <label for="style">Style :</label>
            <select name="style" id="style" required>
              <option value="sportswear">Sportswear</option>
              <option value="classic">Classic</option>
              <option value="chic">Chic</option>
              <option value="cocooning">Cocooning</option>
            </select><br><br>

          <button type="submit">Ajouter</button>
     </form>
  
  
     {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté sur {{ app.user.username }}, <a href="{{ path('app_logout') }}">Vous déconnecter</a>
        </div>
    {% endif %}
    </div><!-- fin div 6-->
    
    </div> <!-- fin de row-->


</div> <!--fin de home -->


  <div class="tab-pane fade" id="tenue">
  
  <h1>Ma Collection !</h1>

  




<h3>Hauts</h3>

<ul>
    {% for haut in hauts %}
    <div class="row">
    <div class="md-2">
    <div style="margin: 10px 10px"><a href="{{path("detail",{'id' : haut.id}) }}"><img src="uploads/{{haut.photo}}" style="height:200px; width: 200px; border: 1px solid black"></a></div>
    <p style="margin-left : 60px"><a href="{{path("delete",{'id': haut.id}) }}">Supprimer </a> </p>
    </div>
    <div>
    {% endfor %}
</ul>

<h3>Bas</h3>

<ul>
    {% for ba in bas %}
    <div class="row">
    <div class="md-2">
     <div style="margin: 10px 10px"><a href="{{path("detail",{'id' : ba.id}) }}"><img src="uploads/{{ba.photo}}" style="height:200px; width: 200px; border: 1px solid black"></a></div>
    <p style="margin-left : 60px"><a href="{{path("delete",{'id': ba.id}) }}">Supprimer </a> </p>
    </div>
    <div>
    {% endfor %}
</ul>


<h3>Chaussures</h3>

<ul>
    {% for chaussure in chaussures %}
    <div class="row">
    <div class="md-2">
   <div style="margin: 10px 10px"><a href="{{path("detail",{'id' : chaussure.id}) }}"><img src="uploads/{{chaussure.photo}}" style="height:200px; width: 200px; border: 1px solid black"></a></div>
    <p style="margin-left : 60px"><a href="{{path("delete",{'id': chaussure.id}) }}">Supprimer </a> </p>
    </div>
    <div>
    {% endfor %}
</ul>



 </div> <!-- fin de defilement -->



</div><!-- fin de tenue-->

{% endblock %}